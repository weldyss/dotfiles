[alias]
  pub = "!f() { git push -u ${1:-origin} `git symbolic-ref HEAD`; }; f"
  st   = status
  ci   = commit
  co   = checkout
  w    = whatchanged
  br   = branch
  df   = diff
  lg   = log --graph --oneline --decorate
  pl   = pull
  ps   = push
  plm  = pull origin master
  pld  = pull origin dev
  pod  = push origin dev
  pom  = push origin master
  info = config --list
  ch   = log --oneline --reverse
  tags = tag -n1 -l
